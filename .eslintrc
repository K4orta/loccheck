{
    "ecmaFeatures": {
        "jsx": false
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true,
        "mocha": true
    },
    "globals": {
      "expect": true
    },
    "rules": {
        "indent": [2,2],
        "arrow-body-style": [2, "always"],
        "space-before-function-paren": [
            2,
            {
                "anonymous": "never",
                "named": "never"
            }
        ]
    },
    "extends": "xo"
}
